@page
@model TeamAlpha.Pages.Contractors.DeleteModel

@{
    ViewData["Title"] = "Delete Contractor";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-danger mb-0">Delete Contractor</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Warning Message -->
    <div class="alert alert-warning d-flex align-items-center shadow-sm mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
        <div>
            <strong>Are you sure?</strong> This action will permanently remove this contractor's record.
        </div>
    </div>

    <!-- Contractor Summary Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body px-5 py-4">
            <h4 class="mb-3 text-secondary fw-semibold">Contractor Summary</h4>
            <hr class="mb-4" />

            <div class="row g-3">
                <!-- Name -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Name</p>
                    <p class="fs-6">@Model.Contractor.Name</p>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Email</p>
                    <p class="fs-6">@Model.Contractor.Email</p>
                </div>

                <!-- Phone -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Phone</p>
                    <p class="fs-6">@Model.Contractor.Phone</p>
                </div>

                <!-- Specialty -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Specialty</p>
                    <p class="fs-6">@Model.Contractor.Specialty</p>
                </div>

                <!-- Company -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Company</p>
                    <p class="fs-6">@Model.Contractor.Company</p>
                </div>

                <!-- Experience -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Experience (Years)</p>
                    <p class="fs-6">@Model.Contractor.ExperienceYears</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Form -->
    <form method="post" class="text-center">
        <input type="hidden" asp-for="Contractor.ContractorId" />
        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-danger rounded-pill px-5 shadow-sm">
                <i class="bi bi-trash3"></i> Confirm Delete
            </button>
            <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>
