@page
@model TeamAlpha.Pages.Contractors.CreateModel

@{
    ViewData["Title"] = "Create Contractor";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Add New Contractor</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Card Layout -->
    <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
        <form method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-4">
                <!-- Name -->
                <div class="col-md-6">
                    <label asp-for="Contractor.Name" class="form-label fw-semibold">Full Name <span class="text-danger">*</span></label>
                    <input asp-for="Contractor.Name" class="form-control form-control-lg" placeholder="Enter contractor name" />
                    <span asp-validation-for="Contractor.Name" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <label asp-for="Contractor.Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Contractor.Email" type="email" class="form-control form-control-lg" placeholder="contractor@example.com" />
                    <span asp-validation-for="Contractor.Email" class="text-danger small"></span>
                </div>

                <!-- Phone -->
                <div class="col-md-6">
                    <label asp-for="Contractor.Phone" class="form-label fw-semibold">Phone Number</label>
                    <input asp-for="Contractor.Phone" class="form-control form-control-lg" placeholder="+1 (000) 000-0000" />
                    <span asp-validation-for="Contractor.Phone" class="text-danger small"></span>
                </div>

                <!-- Specialty -->
                <div class="col-md-6">
                    <label asp-for="Contractor.Specialty" class="form-label fw-semibold">Specialty</label>
                    <input asp-for="Contractor.Specialty" class="form-control form-control-lg" placeholder="e.g., Plumbing, Electrical, Carpentry" />
                    <span asp-validation-for="Contractor.Specialty" class="text-danger small"></span>
                </div>

                <!-- Company -->
                <div class="col-md-6">
                    <label asp-for="Contractor.Company" class="form-label fw-semibold">Company</label>
                    <input asp-for="Contractor.Company" class="form-control form-control-lg" placeholder="Enter company name" />
                    <span asp-validation-for="Contractor.Company" class="text-danger small"></span>
                </div>

                <!-- Experience Years -->
                <div class="col-md-6">
                    <label asp-for="Contractor.ExperienceYears" class="form-label fw-semibold">Years of Experience</label>
                    <input asp-for="Contractor.ExperienceYears" type="number" min="0" class="form-control form-control-lg" placeholder="e.g., 5" />
                    <span asp-validation-for="Contractor.ExperienceYears" class="text-danger small"></span>
                </div>
            </div>

            <!-- Buttons -->
            <div class="text-center mt-5">
                <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm rounded-pill">
                    <i class="bi bi-person-plus me-2"></i>Create Contractor
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary btn-lg ms-3 rounded-pill">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

