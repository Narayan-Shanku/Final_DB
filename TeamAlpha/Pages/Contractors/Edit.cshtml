@page
@model TeamAlpha.Pages.Contractors.EditModel

@{
    ViewData["Title"] = "Edit Contractor";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Edit Contractor</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Card Layout -->
    <div class="card shadow-sm border-0">
        <div class="card-body px-5 py-4">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Contractor.ContractorId" />

                <div class="row g-4">
                    <!-- Name -->
                    <div class="col-md-6">
                        <label asp-for="Contractor.Name" class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
                        <input asp-for="Contractor.Name" class="form-control shadow-sm" placeholder="Enter full name" />
                        <span asp-validation-for="Contractor.Name" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Contractor.Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Contractor.Email" class="form-control shadow-sm" placeholder="example@domain.com" />
                        <span asp-validation-for="Contractor.Email" class="text-danger"></span>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label asp-for="Contractor.Phone" class="form-label fw-semibold">Phone</label>
                        <input asp-for="Contractor.Phone" class="form-control shadow-sm" placeholder="(123) 456-7890" />
                        <span asp-validation-for="Contractor.Phone" class="text-danger"></span>
                    </div>

                    <!-- Specialty -->
                    <div class="col-md-6">
                        <label asp-for="Contractor.Specialty" class="form-label fw-semibold">Specialty</label>
                        <input asp-for="Contractor.Specialty" class="form-control shadow-sm" placeholder="E.g., Electrical, Plumbing" />
                        <span asp-validation-for="Contractor.Specialty" class="text-danger"></span>
                    </div>

                    <!-- Company -->
                    <div class="col-md-6">
                        <label asp-for="Contractor.Company" class="form-label fw-semibold">Company</label>
                        <input asp-for="Contractor.Company" class="form-control shadow-sm" placeholder="Company Name" />
                        <span asp-validation-for="Contractor.Company" class="text-danger"></span>
                    </div>

                    <!-- Experience -->
                    <div class="col-md-6">
                        <label asp-for="Contractor.ExperienceYears" class="form-label fw-semibold">Experience (Years)</label>
                        <input asp-for="Contractor.ExperienceYears" class="form-control shadow-sm" placeholder="Enter experience in years" />
                        <span asp-validation-for="Contractor.ExperienceYears" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-5 d-flex gap-3">
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
