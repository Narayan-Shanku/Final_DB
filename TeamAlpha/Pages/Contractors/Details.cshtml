@page
@model TeamAlpha.Pages.Contractors.DetailsModel

@{
    ViewData["Title"] = "Contractor Details";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Contractor Profile</h1>
        <p class="text-muted">Detailed information about the selected contractor</p>
    </div>

    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 700px;">
        <div class="card-body p-5">
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width:60px;height:60px;">
                    <i class="bi bi-person-fill text-primary fs-3"></i>
                </div>
                <div class="ms-3">
                    <h3 class="mb-0">@Model.Contractor.Name</h3>
                    <small class="text-muted">@Model.Contractor.Specialty</small>
                </div>
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-4 text-secondary fw-semibold">Email</dt>
                <dd class="col-sm-8">@Model.Contractor.Email</dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Phone</dt>
                <dd class="col-sm-8">@Model.Contractor.Phone</dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Company</dt>
                <dd class="col-sm-8">@Model.Contractor.Company</dd>

                <dt class="col-sm-4 text-secondary fw-semibold">Experience</dt>
                <dd class="col-sm-8">@Model.Contractor.ExperienceYears years</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-page="./Edit" asp-route-id="@Model.Contractor.ContractorId"
                   class="btn btn-outline-primary px-4">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-page="./Index" class="btn btn-light border px-4">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
