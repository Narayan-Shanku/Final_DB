@page
@model TeamAlpha.Pages.Testimonials.IndexModel
@{
    ViewData["Title"] = "Testimonials";
}

<style>
    :root {
        --bg1: #0b1220;
        --glass: #ffffffee;
        --txt: #0f172a;
        --muted: #6b7280;
        --accentA: #3b82f6;
        --accentB: #a78bfa;
        --accentC: #22c55e;
        --accentD: #f59e0b;
    }

    body {
        background: linear-gradient(rgba(9, 12, 20, 0.55), rgba(9, 12, 20, 0.55)), url('https://images.unsplash.com/photo-1504307651254-35680f356dfd?q=80&w=2000&auto=format&fit=crop');
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        color: var(--txt);
    }


    .section {
        max-width: 980px;
        margin: 2rem auto;
    }

    @@media (max-width: 576px) {
        .section {
            margin: 1rem auto;
        }
    }

    .panel {
        position: relative;
        border-radius: 22px;
        padding: 2rem;
        background: linear-gradient(to bottom right, rgba(255,255,255,.92), rgba(255,255,255,.85));
        backdrop-filter: blur(8px);
        border: 2px solid transparent;
        background-clip: padding-box;
        box-shadow: 0 20px 40px rgba(0,0,0,.22);
    }

        .panel::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 22px;
            padding: 2px;
            background: linear-gradient(135deg,var(--accentA),var(--accentB),var(--accentC),var(--accentD));
            -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
        }

    .avg-badge {
        display: inline-flex;
        align-items: center;
        gap: .6rem;
        padding: .55rem 1rem;
        border-radius: 999px;
        background: linear-gradient(135deg,#ffe08a,#ffb84d);
        color: #1f2937;
        font-weight: 800;
        box-shadow: 0 12px 24px rgba(255,184,77,.35);
    }

    .form-control {
        border-radius: 14px;
        border: 2px solid transparent;
        padding: .9rem 1rem;
        background: linear-gradient(#fff,#fff) padding-box, linear-gradient(120deg,var(--accentA),var(--accentB)) border-box;
        box-shadow: 0 6px 18px rgba(59,130,246,.08);
    }

    .rating {
        display: inline-flex;
        flex-direction: row-reverse;
        gap: .45rem;
    }

        .rating input {
            display: none;
        }

        .rating label {
            font-size: 2.2rem;
            cursor: pointer;
            color: #b8b8b8;
            transition: transform .1s ease, color .15s ease, filter .15s ease;
        }

            .rating label:hover,
            .rating label:hover ~ label {
                color: #FFD700;
                transform: scale(1.08);
                filter: drop-shadow(0 0 5px rgba(255,215,80,.6));
            }

        .rating input:checked ~ label {
            color: #FFD700;
            filter: drop-shadow(0 0 8px rgba(255,215,80,.8));
        }

    .btn-gradient {
        border: 0;
        border-radius: 14px;
        padding: 1rem 1.25rem;
        font-weight: 700;
        letter-spacing: .3px;
        background: linear-gradient(90deg,var(--accentA),var(--accentB),var(--accentC));
        background-size: 200% 100%;
        color: #fff;
        box-shadow: 0 16px 30px rgba(59,130,246,.28);
        transition: transform .12s ease, box-shadow .12s ease;
        animation: slide 6s linear infinite;
    }

        .btn-gradient:hover {
            transform: translateY(-1px);
            box-shadow: 0 18px 36px rgba(59,130,246,.34);
        }

    @@keyframes slide {
        to {
            background-position: 200% 0;
        }
    }

    .review-card {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 26px rgba(0,0,0,.12);
    }

        .review-card .bar {
            height: 7px;
            background: linear-gradient(90deg,var(--accentA),var(--accentB),var(--accentC),var(--accentD));
        }

    .review-stars {
        color: #fbbf24;
        letter-spacing: 1px;
    }

    .muted {
        color: #6b7280;
    }
</style>

<div class="section text-center text-white">
    <h1 class="fw-bold" style="text-shadow:0 6px 16px rgba(0,0,0,.35);">
        <span style="font-size:1.3em">⭐</span> Share Your Feedback
    </h1>

    <div class="mt-3">
        @if (Model.TotalReviews > 0)
        {
            <span class="avg-badge">
                <span class="big">@Model.AverageRating</span>
                <span>out of 5 • @Model.TotalReviews reviews</span>
            </span>
        }
        else
        {
            <span class="avg-badge"><span class="big">Be first!</span> Leave the very first review</span>
        }
    </div>
</div>

<form method="post" class="panel section">
    <div class="text-center mb-3">
        <div class="form-label fw-semibold mb-2">Your Rating</div>
        <div class="rating">
            <input type="radio" id="star5" name="NewTestimonial.Rating" value="5" required />
            <label for="star5" title="Amazing">★</label>
            <input type="radio" id="star4" name="NewTestimonial.Rating" value="4" />
            <label for="star4" title="Great">★</label>
            <input type="radio" id="star3" name="NewTestimonial.Rating" value="3" />
            <label for="star3" title="Good">★</label>
            <input type="radio" id="star2" name="NewTestimonial.Rating" value="2" />
            <label for="star2" title="Okay">★</label>
            <input type="radio" id="star1" name="NewTestimonial.Rating" value="1" />
            <label for="star1" title="Needs improvement">★</label>
        </div>
        <span asp-validation-for="NewTestimonial.Rating" class="text-danger d-block mt-1"></span>
    </div>

    <div class="mb-3">
        <input asp-for="NewTestimonial.Name" class="form-control form-control-lg"
               placeholder="Your name (optional)" />
        <span asp-validation-for="NewTestimonial.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
<textarea asp-for="NewTestimonial.Comment" class="form-control" rows="3"
          placeholder="Write your feedback (max 300 chars)"></textarea>
        <span asp-validation-for="NewTestimonial.Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-gradient btn-lg w-100">Submit feedback</button>
    <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
</form>

<div class="panel section">
    <h3 class="mb-4">What people say</h3>
    <div class="row">
        @foreach (var t in Model.Testimonials)
        {
            <div class="col-md-4 mb-3">
                <div class="card review-card h-100">
                    <div class="bar"></div>
                    <div class="card-body">
                        <div class="review-stars fs-5 mb-2">
                            @for (int i = 0; i < t.Rating; i++)
                            {
                                <text>★</text>
                                ;
                            }
                            @for (int i = t.Rating; i < 5; i++)
                            {
                                <span class="text-secondary">★</span>
                                ;
                            }
                        </div>
                        <p class="mb-2">@t.Comment</p>
                        <small class="muted">
                            @(string.IsNullOrWhiteSpace(t.Name) ? "Anonymous" : t.Name)
                            • @t.CreatedOn.ToShortDateString()
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>