<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TeamAlpha</title>

    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- BOOTSTRAP + ICONS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- SITE STYLES -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TeamAlpha.styles.css" asp-append-version="true" />

    <meta name="theme-color" content="#0ea5e9" />
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-page="/Index">
                    <i class="bi bi-house-door-fill me-1"></i> TeamAlpha
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNavbar" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto align-items-lg-center">

                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Inquiries/Index">Inquiries</a></li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-page="/Projects/Index">Projects</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/Contractors/Index">Contractors</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/Vendors/Index">Vendors</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/Customers/Index">Customers</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/Phases/Index">Phases</a></li>
                        }

                        <li class="nav-item"><a class="nav-link" asp-page="/StatisticsDashboard">Statistics</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Search">Search</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/">Testimonials</a></li>

                        <!-- THEME TOGGLE -->
                        <li class="nav-item ms-lg-3">
                            <button id="themeToggle"
                                    class="btn btn-outline-secondary border-0 fs-5"
                                    type="button"
                                    title="Toggle theme">
                                <i id="themeIcon" class="bi bi-moon-fill"></i>
                            </button>
                        </li>

                        <!-- LOGIN PARTIAL -->
                        <li class="nav-item ms-lg-3">
                            <partial name="_LoginPartial" />
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN -->
    <main role="main" class="flex-grow-1">
        <div class="container-fluid px-0">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-light border-top mt-auto">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-md-6">
                    <h5 class="mb-2">TeamAlpha<span class="text-primary">.</span></h5>
                    <p class="small mb-3">
                        Minimal, sustainable, human-centered architecture.
                    </p>
                    <div class="d-flex gap-3 fs-5">
                        <a class="link-light opacity-75 hover-opacity-100" href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                        <a class="link-light opacity-75 hover-opacity-100" href="#" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
                        <a class="link-light opacity-75 hover-opacity-100" href="#" aria-label="YouTube"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-6">
                    <h6>Newsletter</h6>
                    <form class="d-flex gap-2" onsubmit="event.preventDefault(); alert('Subscribed!'); this.reset();">
                        <input type="email" class="form-control" placeholder="Your email" required />
                        <button class="btn btn-primary" type="submit">Subscribe</button>
                    </form>
                </div>
            </div>

            <hr class="border-secondary border-opacity-25 my-4" />

            <div class="small d-flex justify-content-between flex-wrap gap-2">
                <span>© <span id="year"></span> TeamAlpha Studio. All rights reserved.</span>
                <div class="d-flex gap-3">
                    <a class="link-light opacity-75 hover-opacity-100" href="#">Privacy</a>
                    <a class="link-light opacity-75 hover-opacity-100" href="#">Terms</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Set current year in footer
        document.addEventListener('DOMContentLoaded', () => {
            const y = document.getElementById('year');
            if (y) y.textContent = new Date().getFullYear();
        });

        // Dark mode toggle (icon + persistence)
        (() => {
            const body = document.body;
            const toggleBtn = document.getElementById('themeToggle');
            const icon = document.getElementById('themeIcon');
            if (!toggleBtn || !icon) return;

            // Apply saved theme
            const saved = localStorage.getItem('theme');
            if (saved === 'dark') {
                body.classList.add('dark-mode');
                icon.classList.replace('bi-moon-fill', 'bi-sun-fill');
            }

            // Toggle handler
            toggleBtn.addEventListener('click', () => {
                const isDark = body.classList.toggle('dark-mode');
                icon.classList.replace(
                    isDark ? 'bi-moon-fill' : 'bi-sun-fill',
                    isDark ? 'bi-sun-fill' : 'bi-moon-fill'
                );
                localStorage.setItem('theme', isDark ? 'dark' : 'light');
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
