@page
@model TeamAlpha.Pages.Phases.CreateModel

@{
    ViewData["Title"] = "Create Phase";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Add New Phase</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Card Layout -->
    <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
        <form method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

            <div class="row g-4">
                <!-- Phase Name -->
                <div class="col-md-6">
                    <label asp-for="Phase.Name" class="form-label fw-semibold">Phase Name <span class="text-danger">*</span></label>
                    <input asp-for="Phase.Name" class="form-control form-control-lg" placeholder="Enter phase name" />
                    <span asp-validation-for="Phase.Name" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="col-md-6">
                    <label asp-for="Phase.Description" class="form-label fw-semibold">Description</label>
                    <input asp-for="Phase.Description" class="form-control form-control-lg" placeholder="Brief phase description" />
                    <span asp-validation-for="Phase.Description" class="text-danger small"></span>
                </div>

                <!-- Start Date -->
                <div class="col-md-6">
                    <label asp-for="Phase.StartDate" class="form-label fw-semibold">Start Date</label>
                    <input asp-for="Phase.StartDate" type="date" class="form-control form-control-lg" />
                    <span asp-validation-for="Phase.StartDate" class="text-danger small"></span>
                </div>

                <!-- End Date -->
                <div class="col-md-6">
                    <label asp-for="Phase.EndDate" class="form-label fw-semibold">End Date</label>
                    <input asp-for="Phase.EndDate" type="date" class="form-control form-control-lg" />
                    <span asp-validation-for="Phase.EndDate" class="text-danger small"></span>
                </div>

                <!-- Status -->
                <div class="col-md-6">
                    <label asp-for="Phase.Status" class="form-label fw-semibold">Status</label>
                    <input asp-for="Phase.Status" class="form-control form-control-lg" placeholder="e.g., Ongoing, Completed" />
                    <span asp-validation-for="Phase.Status" class="text-danger small"></span>
                </div>

                <!-- Progress -->
                <div class="col-md-6">
                    <label asp-for="Phase.Progress" class="form-label fw-semibold">Progress (%)</label>
                    <input asp-for="Phase.Progress" type="number" min="0" max="100" class="form-control form-control-lg" placeholder="e.g., 50" />
                    <span asp-validation-for="Phase.Progress" class="text-danger small"></span>
                </div>

                <!-- Linked Project -->
                <div class="col-12">
                    <label asp-for="Phase.ProjectId" class="form-label fw-semibold">Project</label>
                    <select asp-for="Phase.ProjectId" class="form-select form-select-lg" asp-items="ViewBag.ProjectId"></select>
                    <span asp-validation-for="Phase.ProjectId" class="text-danger small"></span>
                </div>
            </div>

            <!-- Buttons -->
            <div class="text-center mt-5">
                <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm rounded-pill">
                    <i class="bi bi-plus-circle me-2"></i>Create Phase
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary btn-lg ms-3 rounded-pill">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

