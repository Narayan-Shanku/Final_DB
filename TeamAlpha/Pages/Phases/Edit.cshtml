@page
@model TeamAlpha.Pages.Phases.EditModel

@{
    ViewData["Title"] = "Edit Phase";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Edit Phase</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Card Layout -->
    <div class="card shadow-sm border-0">
        <div class="card-body px-5 py-4">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <input type="hidden" asp-for="Phase.PhaseId" />

                <div class="row g-4">
                    <!-- Phase Name -->
                    <div class="col-md-6">
                        <label asp-for="Phase.Name" class="form-label fw-semibold">
                            Phase Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Phase.Name" class="form-control shadow-sm" placeholder="Enter phase name" />
                        <span asp-validation-for="Phase.Name" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-6">
                        <label asp-for="Phase.Description" class="form-label fw-semibold">Description</label>
                        <input asp-for="Phase.Description" class="form-control shadow-sm" placeholder="Short description" />
                        <span asp-validation-for="Phase.Description" class="text-danger small"></span>
                    </div>

                    <!-- Start Date -->
                    <div class="col-md-6">
                        <label asp-for="Phase.StartDate" class="form-label fw-semibold">Start Date</label>
                        <input asp-for="Phase.StartDate" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="Phase.StartDate" class="text-danger small"></span>
                    </div>

                    <!-- End Date -->
                    <div class="col-md-6">
                        <label asp-for="Phase.EndDate" class="form-label fw-semibold">End Date</label>
                        <input asp-for="Phase.EndDate" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="Phase.EndDate" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <label asp-for="Phase.Status" class="form-label fw-semibold">Status</label>
                        <select asp-for="Phase.Status" class="form-select shadow-sm">
                            <option value="">-- Select Status --</option>
                            <option>Not Started</option>
                            <option>In Progress</option>
                            <option>Completed</option>
                            <option>Delayed</option>
                        </select>
                        <span asp-validation-for="Phase.Status" class="text-danger small"></span>
                    </div>

                    <!-- Progress -->
                    <div class="col-md-6">
                        <label asp-for="Phase.Progress" class="form-label fw-semibold">Progress (%)</label>
                        <input asp-for="Phase.Progress" type="number" class="form-control shadow-sm" min="0" max="100" placeholder="Enter completion percentage" />
                        <span asp-validation-for="Phase.Progress" class="text-danger small"></span>

                        <!-- Visual Progress Bar -->
                        <div class="progress mt-2" style="height: 20px;">
                            <div class="progress-bar
                                @(Model.Phase?.Progress < 40 ? "bg-danger" :
                                                                   Model.Phase?.Progress < 75 ? "bg-warning text-dark" :
                                                                   "bg-success")"
                                 role="progressbar"
                                 style="width: @(Model.Phase?.Progress ?? 0)%"
                                 aria-valuenow="@(Model.Phase?.Progress ?? 0)"
                                 aria-valuemin="0" aria-valuemax="100">
                                @(Model.Phase?.Progress ?? 0)%
                            </div>
                        </div>
                    </div>

                    <!-- Project Selector -->
                    <div class="col-md-6">
                        <label asp-for="Phase.ProjectId" class="form-label fw-semibold">Project</label>
                        <select asp-for="Phase.ProjectId" class="form-select shadow-sm" asp-items="ViewBag.ProjectId">
                            <option value="">-- Select Project --</option>
                        </select>
                        <span asp-validation-for="Phase.ProjectId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="mt-5 d-flex flex-wrap gap-3">
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
