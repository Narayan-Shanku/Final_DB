@page
@model TeamAlpha.Pages.Projects.DetailsModel

@{
    ViewData["Title"] = "Project Details";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Project Details</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Card Layout -->
    <div class="card shadow-sm border-0">
        <div class="card-body px-5 py-4">
            <h4 class="mb-3 text-secondary fw-semibold">Project Summary</h4>
            <hr class="mb-4" />

            <div class="row g-3">
                <!-- Title -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Title</p>
                    <p class="fs-6">@Model.Project.Title</p>
                </div>

                <!-- Description -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Description</p>
                    <p class="fs-6">@Model.Project.Description</p>
                </div>

                <!-- Project Type -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Project Type</p>
                    <p class="fs-6">@Model.Project.ProjectType</p>
                </div>

                <!-- Area Size -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Area Size</p>
                    <p class="fs-6">@Model.Project.AreaSize</p>
                </div>

                <!-- Style -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Style</p>
                    <p class="fs-6">@Model.Project.Style</p>
                </div>

                <!-- Estimated Budget -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Estimated Budget</p>
                    <p class="fs-6">$@Model.Project.EstimatedBudget</p>
                </div>

                <!-- Status -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Status</p>
                    <p class="fs-6">
                        <span class="badge
                            @(Model.Project.Status == "Planned" ? "bg-info text-dark" :
                                                            Model.Project.Status == "In Progress" ? "bg-warning text-dark" :
                                                            Model.Project.Status == "Completed" ? "bg-success" :
                                                            Model.Project.Status == "On Hold" ? "bg-secondary" : "bg-light text-dark")">
                            @Model.Project.Status
                        </span>
                    </p>
                </div>

                <!-- Start Date -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Start Date</p>
                    <p class="fs-6">@Model.Project.StartDate.ToShortDateString()</p>
                </div>

                <!-- End Date -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">End Date</p>
                    <p class="fs-6">@Model.Project.EndDate?.ToShortDateString()</p>
                </div>

                <!-- Location -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Location</p>
                    <p class="fs-6">@Model.Project.Location</p>
                </div>

                <!-- Customer -->
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Customer</p>
                    <p class="fs-6">@Model.Project.Customer?.Name</p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-5 d-flex gap-3">
                <a asp-page="./Edit" asp-route-id="@Model.Project.ProjectId" class="btn btn-success rounded-pill px-5 shadow-sm">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                    <i class="bi bi-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
