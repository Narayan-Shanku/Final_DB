@page
@model TeamAlpha.Pages.Projects.EditModel

@{
    ViewData["Title"] = "Edit Project";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Edit Project</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Edit Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body px-5 py-4">
            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Project.ProjectId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    <!-- Title -->
                    <div class="col-md-6">
                        <label asp-for="Project.Title" class="form-label fw-semibold">Project Title <span class="text-danger">*</span></label>
                        <input asp-for="Project.Title" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter project title" />
                        <span asp-validation-for="Project.Title" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-6">
                        <label asp-for="Project.Description" class="form-label fw-semibold">Description</label>
                        <textarea asp-for="Project.Description" rows="3" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Short project summary"></textarea>
                        <span asp-validation-for="Project.Description" class="text-danger small"></span>
                    </div>

                    <!-- Project Type -->
                    <div class="col-md-6">
                        <label asp-for="Project.ProjectType" class="form-label fw-semibold">Project Type</label>
                        <input asp-for="Project.ProjectType" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Residential, Commercial..." />
                        <span asp-validation-for="Project.ProjectType" class="text-danger small"></span>
                    </div>

                    <!-- Area Size -->
                    <div class="col-md-6">
                        <label asp-for="Project.AreaSize" class="form-label fw-semibold">Area Size (sq. ft)</label>
                        <input asp-for="Project.AreaSize" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Project.AreaSize" class="text-danger small"></span>
                    </div>

                    <!-- Style -->
                    <div class="col-md-6">
                        <label asp-for="Project.Style" class="form-label fw-semibold">Preferred Style</label>
                        <input asp-for="Project.Style" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Modern, Industrial, Minimalist..." />
                        <span asp-validation-for="Project.Style" class="text-danger small"></span>
                    </div>

                    <!-- Estimated Budget -->
                    <div class="col-md-6">
                        <label asp-for="Project.EstimatedBudget" class="form-label fw-semibold">Estimated Budget ($)</label>
                        <input asp-for="Project.EstimatedBudget" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Project.EstimatedBudget" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <label asp-for="Project.Status" class="form-label fw-semibold">Status</label>
                        <select asp-for="Project.Status" class="form-select form-select-lg rounded-3 shadow-sm">
                            <option value="">Select status</option>
                            <option>Planned</option>
                            <option>In Progress</option>
                            <option>Completed</option>
                            <option>On Hold</option>
                        </select>
                        <span asp-validation-for="Project.Status" class="text-danger small"></span>
                    </div>

                    <!-- Start Date -->
                    <div class="col-md-6">
                        <label asp-for="Project.StartDate" class="form-label fw-semibold">Start Date</label>
                        <input asp-for="Project.StartDate" type="date" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Project.StartDate" class="text-danger small"></span>
                    </div>

                    <!-- End Date -->
                    <div class="col-md-6">
                        <label asp-for="Project.EndDate" class="form-label fw-semibold">End Date</label>
                        <input asp-for="Project.EndDate" type="date" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Project.EndDate" class="text-danger small"></span>
                    </div>

                    <!-- Location -->
                    <div class="col-md-6">
                        <label asp-for="Project.Location" class="form-label fw-semibold">Location</label>
                        <input asp-for="Project.Location" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter city or site address" />
                        <span asp-validation-for="Project.Location" class="text-danger small"></span>
                    </div>

                    <!-- Customer -->
                    <div class="col-md-6">
                        <label asp-for="Project.CustomerId" class="form-label fw-semibold">Customer</label>
                        <select asp-for="Project.CustomerId" class="form-select form-select-lg rounded-3 shadow-sm" asp-items="ViewBag.CustomerId">
                            <option value="">Select customer</option>
                        </select>
                        <span asp-validation-for="Project.CustomerId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex gap-3 mt-5">
                    <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
