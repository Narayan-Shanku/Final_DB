@page
@model TeamAlpha.Pages.Projects.CreateModel

@{
    ViewData["Title"] = "Create Project";
}

<div class="container py-5">
    <!-- HEADER -->
    <div class="text-center mb-5">
        <h1 class="fw-bold display-6 text-primary">New Project</h1>
        <p class="lead text-muted">Enter your project details below to get started.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
                <form method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-3">
                        <!-- Project Title -->
                        <div class="col-md-6">
                            <label asp-for="Project.Title" class="form-label fw-semibold">
                                Title <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Project.Title" class="form-control form-control-lg" placeholder="e.g., Modern Villa" />
                            <span asp-validation-for="Project.Title" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="col-md-6">
                            <label asp-for="Project.Description" class="form-label fw-semibold">Description</label>
                            <input asp-for="Project.Description" class="form-control form-control-lg" placeholder="Short project overview" />
                            <span asp-validation-for="Project.Description" class="text-danger small"></span>
                        </div>

                        <!-- Project Type -->
                        <div class="col-md-6">
                            <label asp-for="Project.ProjectType" class="form-label fw-semibold">Project Type</label>
                            <input asp-for="Project.ProjectType" class="form-control form-control-lg" placeholder="e.g., Residential / Commercial" />
                            <span asp-validation-for="Project.ProjectType" class="text-danger small"></span>
                        </div>

                        <!-- Area Size -->
                        <div class="col-md-6">
                            <label asp-for="Project.AreaSize" class="form-label fw-semibold">Area Size (sq ft)</label>
                            <input asp-for="Project.AreaSize" class="form-control form-control-lg" />
                            <span asp-validation-for="Project.AreaSize" class="text-danger small"></span>
                        </div>

                        <!-- Style -->
                        <div class="col-md-6">
                            <label asp-for="Project.Style" class="form-label fw-semibold">Preferred Style</label>
                            <input asp-for="Project.Style" class="form-control form-control-lg" placeholder="e.g., Minimalist, Contemporary" />
                            <span asp-validation-for="Project.Style" class="text-danger small"></span>
                        </div>

                        <!-- Budget -->
                        <div class="col-md-6">
                            <label asp-for="Project.EstimatedBudget" class="form-label fw-semibold">Estimated Budget ($)</label>
                            <input asp-for="Project.EstimatedBudget" class="form-control form-control-lg" />
                            <span asp-validation-for="Project.EstimatedBudget" class="text-danger small"></span>
                        </div>

                        <!-- Status -->
                        <div class="col-md-6">
                            <label asp-for="Project.Status" class="form-label fw-semibold">Status</label>
                            <input asp-for="Project.Status" class="form-control form-control-lg" placeholder="e.g., Planned, Ongoing, Completed" />
                            <span asp-validation-for="Project.Status" class="text-danger small"></span>
                        </div>

                        <!-- Start Date -->
                        <div class="col-md-6">
                            <label asp-for="Project.StartDate" class="form-label fw-semibold">Start Date</label>
                            <input asp-for="Project.StartDate" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="Project.StartDate" class="text-danger small"></span>
                        </div>

                        <!-- End Date -->
                        <div class="col-md-6">
                            <label asp-for="Project.EndDate" class="form-label fw-semibold">End Date</label>
                            <input asp-for="Project.EndDate" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="Project.EndDate" class="text-danger small"></span>
                        </div>

                        <!-- Location -->
                        <div class="col-md-6">
                            <label asp-for="Project.Location" class="form-label fw-semibold">Location</label>
                            <input asp-for="Project.Location" class="form-control form-control-lg" placeholder="City / Area" />
                            <span asp-validation-for="Project.Location" class="text-danger small"></span>
                        </div>

                        <!-- Customer -->
                        <div class="col-12">
                            <label asp-for="Project.CustomerId" class="form-label fw-semibold">Customer</label>
                            <select asp-for="Project.CustomerId" class="form-select form-select-lg" asp-items="ViewBag.CustomerId"></select>
                            <span asp-validation-for="Project.CustomerId" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- ACTION BUTTONS -->
                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                            <i class="bi bi-send-fill me-2"></i>Create Project
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary btn-lg ms-3">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

