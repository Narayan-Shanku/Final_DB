@page
@model TeamAlpha.Pages.Inquiries.EditModel

@{
    ViewData["Title"] = "Edit Inquiry";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Edit Inquiry</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body px-5 py-4">
            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Inquiry.InquiryId" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    <!-- Subject -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.Subject" class="form-label fw-semibold">Subject <span class="text-danger">*</span></label>
                        <input asp-for="Inquiry.Subject" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.Subject" class="text-danger small"></span>
                    </div>

                    <!-- Name -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.Name" class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
                        <input asp-for="Inquiry.Name" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.Name" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Inquiry.Email" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.Email" class="text-danger small"></span>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.Phone" class="form-label fw-semibold">Phone</label>
                        <input asp-for="Inquiry.Phone" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.Phone" class="text-danger small"></span>
                    </div>

                    <!-- Message -->
                    <div class="col-12">
                        <label asp-for="Inquiry.Message" class="form-label fw-semibold">Message <span class="text-danger">*</span></label>
                        <textarea asp-for="Inquiry.Message" rows="3" class="form-control form-control-lg rounded-3 shadow-sm"></textarea>
                        <span asp-validation-for="Inquiry.Message" class="text-danger small"></span>
                    </div>

                    <!-- Customer Type -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.CustomerType" class="form-label fw-semibold">Customer Type</label>
                        <input asp-for="Inquiry.CustomerType" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.CustomerType" class="text-danger small"></span>
                    </div>

                    <!-- Project Type -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.ProjectType" class="form-label fw-semibold">Project Type</label>
                        <input asp-for="Inquiry.ProjectType" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.ProjectType" class="text-danger small"></span>
                    </div>

                    <!-- Area Size -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.AreaSize" class="form-label fw-semibold">Area Size</label>
                        <input asp-for="Inquiry.AreaSize" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.AreaSize" class="text-danger small"></span>
                    </div>

                    <!-- Preferred Style -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.PreferredStyle" class="form-label fw-semibold">Preferred Style</label>
                        <input asp-for="Inquiry.PreferredStyle" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.PreferredStyle" class="text-danger small"></span>
                    </div>

                    <!-- Budget -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.Budget" class="form-label fw-semibold">Budget ($)</label>
                        <input asp-for="Inquiry.Budget" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.Budget" class="text-danger small"></span>
                    </div>

                    <!-- Consent -->
                    <div class="col-md-6 d-flex align-items-center mt-4">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Inquiry.Consent" id="consentCheck" />
                            <label class="form-check-label fw-semibold" for="consentCheck">
                                @Html.DisplayNameFor(model => model.Inquiry.Consent)
                            </label>
                        </div>
                    </div>

                    <!-- Date -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.Date" class="form-label fw-semibold">Date</label>
                        <input asp-for="Inquiry.Date" type="date" class="form-control form-control-lg rounded-3 shadow-sm" />
                        <span asp-validation-for="Inquiry.Date" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.Status" class="form-label fw-semibold">Status</label>
                        <select asp-for="Inquiry.Status" class="form-select form-select-lg rounded-3 shadow-sm">
                            <option value="Pending">Pending</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                        <span asp-validation-for="Inquiry.Status" class="text-danger small"></span>
                    </div>

                    <!-- Customer -->
                    <div class="col-md-6">
                        <label asp-for="Inquiry.CustomerId" class="form-label fw-semibold">Customer</label>
                        <select asp-for="Inquiry.CustomerId" class="form-select form-select-lg rounded-3 shadow-sm" asp-items="ViewBag.CustomerId"></select>
                        <span asp-validation-for="Inquiry.CustomerId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-3 mt-5">
                    <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
