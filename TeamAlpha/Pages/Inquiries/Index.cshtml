@page
@model TeamAlpha.Pages.Inquiries.IndexModel

@{
    ViewData["Title"] = "Inquiries";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Inquiries</h1>
        <a asp-page="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> New Inquiry
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr class="text-secondary small text-uppercase">
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].Subject)</th>
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].ProjectType)</th>
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].Budget)</th>
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].Date)</th>
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].Status)</th>
                            <th>@Html.DisplayNameFor(model => model.Inquiry[0].Customer)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Inquiry)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Subject</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.ProjectType</td>
                                <td>$@item.Budget</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>
                                    <span class="badge
                                            @(item.Status == "Pending" ? "bg-warning text-dark" :
                                                                                    item.Status == "Approved" ? "bg-success" :
                                                                                    item.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                                    @item.Status
                                </span>
                            </td>
                            <td>@item.Customer?.Name</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-page="./Details" asp-route-id="@item.InquiryId" class="btn btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@item.InquiryId" class="btn btn-outline-success">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.InquiryId" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                                                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
