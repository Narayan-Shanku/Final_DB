@page
@model TeamAlpha.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Customer Details</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Card Layout -->
    <div class="card shadow-sm border-0">
        <div class="card-body px-5 py-4">
            <h4 class="mb-3 text-secondary fw-semibold">Customer Summary</h4>
            <hr class="mb-4" />

            <div class="row g-3">
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Name</p>
                    <p class="fs-6">@Model.Customer.Name</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Email</p>
                    <p class="fs-6">@Model.Customer.Email</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Phone</p>
                    <p class="fs-6">@Model.Customer.Phone</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Address</p>
                    <p class="fs-6">@Model.Customer.Address</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Type</p>
                    <p class="fs-6">
                        <span class="badge
                            @(Model.Customer.Type == "Premium" ? "bg-success" :
                                                            Model.Customer.Type == "Regular" ? "bg-primary" :
                                                            Model.Customer.Type == "Guest" ? "bg-warning text-dark" : "bg-secondary")">
                            @Model.Customer.Type
                        </span>
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1 fw-semibold text-muted">Registration Date</p>
                    <p class="fs-6">@Model.Customer.RegistrationDate.ToShortDateString()</p>
                </div>
            </div>

            <!-- Actions -->
            <div class="mt-4 d-flex gap-3">
                <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId" class="btn btn-success rounded-pill px-4 shadow-sm">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                    <i class="bi bi-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
