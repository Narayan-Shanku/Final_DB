@page
@model TeamAlpha.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Edit Customer</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Card Layout -->
    <div class="card shadow-sm border-0">
        <div class="card-body px-5 py-4">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Customer.CustomerId" />

                <div class="row g-4">
                    <!-- Name -->
                    <div class="col-md-6">
                        <label asp-for="Customer.Name" class="form-label fw-semibold">
                            Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Customer.Name" class="form-control shadow-sm" placeholder="Enter full name" />
                        <span asp-validation-for="Customer.Name" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Customer.Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Customer.Email" class="form-control shadow-sm" placeholder="example@domain.com" />
                        <span asp-validation-for="Customer.Email" class="text-danger"></span>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label asp-for="Customer.Phone" class="form-label fw-semibold">Phone</label>
                        <input asp-for="Customer.Phone" class="form-control shadow-sm" placeholder="(123) 456-7890" />
                        <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <label asp-for="Customer.Address" class="form-label fw-semibold">Address</label>
                        <input asp-for="Customer.Address" class="form-control shadow-sm" placeholder="Enter address" />
                        <span asp-validation-for="Customer.Address" class="text-danger"></span>
                    </div>

                    <!-- Type -->
                    <div class="col-md-6">
                        <label asp-for="Customer.Type" class="form-label fw-semibold">Customer Type</label>
                        <select asp-for="Customer.Type" class="form-select shadow-sm">
                            <option value="">-- Select Type --</option>
                            <option>Premium</option>
                            <option>Regular</option>
                            <option>Guest</option>
                        </select>
                        <span asp-validation-for="Customer.Type" class="text-danger"></span>
                    </div>

                    <!-- Registration Date -->
                    <div class="col-md-6">
                        <label asp-for="Customer.RegistrationDate" class="form-label fw-semibold">Registration Date</label>
                        <input asp-for="Customer.RegistrationDate" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="Customer.RegistrationDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="mt-5 d-flex gap-3">
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
