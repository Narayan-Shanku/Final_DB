@page
@model TeamAlpha.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Customers";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">Customers</h1>
        <a asp-page="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> New Customer
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr class="text-secondary small text-uppercase">
                            <th>@Html.DisplayNameFor(model => model.Customer[0].Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer[0].Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer[0].Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer[0].Address)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer[0].Type)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer[0].RegistrationDate)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Customer)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                <td>
                                    <span class="badge
                                            @(item.Type == "Residential" ? "bg-info text-dark" :
                                                                                    item.Type == "Commercial" ? "bg-success" :
                                                                                    item.Type == "Government" ? "bg-warning text-dark" :
                                                                                    "bg-secondary")">
                                    @item.Type
                                </span>
                            </td>
                            <td>@item.RegistrationDate.ToShortDateString()</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn btn-outline-primary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn btn-outline-success" title="Edit Customer">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn btn-outline-danger" title="Delete Customer">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                                                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
