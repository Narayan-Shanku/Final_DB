@section Scripts {
<script>
// ===== Portfolio Filter =====
(function () {
  const grid = document.getElementById('portfolioGrid');
  const buttons = document.querySelectorAll('.filter-btns .btn');
  if (!grid || !buttons.length) return;

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      buttons.forEach(b => b.classList.replace('btn-dark', 'btn-outline-dark'));
      btn.classList.replace('btn-outline-dark', 'btn-dark');

      const filter = btn.dataset.filter;
      const items = grid.querySelectorAll('.portfolio-item');
      items.forEach(it => {
        const tags = it.getAttribute('data-tags') || '';
        const hit = filter === '*' || tags.split(' ').includes(filter);
        it.style.display = hit ? '' : 'none';
      });
    });
  });
})();

// ===== Project Builder "estimate" preview =====
(function () {
  const form = document.getElementById('builderForm');
  const out = document.getElementById('estimateContent');
  if (!form || !out) return;

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const data = Object.fromEntries(new FormData(form).entries());
    const size = Number(data.size || 0);
    const floors = Number(data.floors || 1);

    // Very rough scope wording (not a price quote)
    const density = data.type === 'Commercial' ? 1.25 : data.type === 'Interior' ? 0.75 : 1.0;
    const complexity = (data.style === 'Sustainable' ? 1.2 : data.style === 'Traditional' ? 1.05 : 1.0);
    const programIndex = Math.round(size * floors * density * complexity);

    out.innerHTML = `
      <div class="d-flex align-items-start gap-3">
        <i class="bi bi-clipboard2-check fs-4"></i>
        <div>
          <strong>Scope draft</strong><br/>
          • Type: <em>${data.type}</em> • Size: <em>${size} sqft</em> • Floors: <em>${floors}</em><br/>
          • Style: <em>${data.style}</em> • Budget: <em>${data.budget || '—'}</em><br/>
          <span class="text-secondary">Program index: ${programIndex.toLocaleString()}</span>
        </div>
      </div>
      <hr class="my-2">
      <ul class="mb-0 small">
        <li>Schematic layouts and massing study (2–3 options)</li>
        <li>Material & daylight strategy aligned to <em>${data.style}</em></li>
        <li>Permitting readiness checklist and next steps</li>
      </ul>
    `;
  });
})();

// ===== Subtle reveal on scroll (reduced motion friendly) =====
(function () {
  if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
  const els = document.querySelectorAll('.reveal-on-scroll, .service-card, .portfolio-item, .blog-card');
  const io = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('reveal-in');
        io.unobserve(e.target);
      }
    });
  }, { threshold: 0.12 });
  els.forEach(el => io.observe(el));
})();
</script>
}

