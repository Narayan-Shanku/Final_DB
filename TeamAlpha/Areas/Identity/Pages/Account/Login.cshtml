@page
@model LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Login Card -->
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body px-5 py-4">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary mb-1">Welcome Back</h2>
                        <p class="text-muted mb-0">Sign in to continue your architectural journey</p>
                    </div>

                    <!-- Login Form -->
                    <form id="account" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                            <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill shadow-sm"
                                   placeholder="name@example.com" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">Password <span class="text-danger">*</span></label>
                            <input asp-for="Input.Password" class="form-control form-control-lg rounded-pill shadow-sm"
                                   type="password" placeholder="••••••••" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Submit -->
                        <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
                        </button>
                    </form>

                    <!-- Links -->
                    <div class="text-center mt-4">
                        <p class="mb-1">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary text-decoration-none fw-semibold">
                                Forgot your password?
                            </a>
                        </p>
                        <p class="mb-1">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary text-decoration-none fw-semibold">
                                Create a new account
                            </a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-primary text-decoration-none fw-semibold">
                                Resend email confirmation
                            </a>
                        </p>
                    </div>

                    <!-- Divider -->
                    <div class="d-flex align-items-center my-4">
                        <hr class="flex-grow-1">
                        <span class="px-3 text-muted">or</span>
                        <hr class="flex-grow-1">
                    </div>

                    <!-- External Logins -->
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p class="text-center text-muted small">
                            No external logins configured.
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">Learn how to add one</a>.
                        </p>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-3">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary rounded-pill py-2 shadow-sm"
                                            name="provider" value="@provider.Name">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Sign in with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
