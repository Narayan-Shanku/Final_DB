@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Registration Card -->
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body px-5 py-4">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary mb-1">Create Your Account</h2>
                        <p class="text-muted mb-0">Join us and start your architectural journey</p>
                    </div>

                    <!-- Register Form -->
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                            <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="name@example.com" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">Password <span class="text-danger">*</span></label>
                            <input asp-for="Input.Password" class="form-control form-control-lg rounded-pill shadow-sm" type="password" placeholder="••••••••" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Confirm Password <span class="text-danger">*</span></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg rounded-pill shadow-sm" type="password" placeholder="••••••••" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Submit -->
                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-person-plus me-1"></i> Create Account
                        </button>
                    </form>

                    <!-- Divider -->
                    <div class="d-flex align-items-center my-4">
                        <hr class="flex-grow-1">
                        <span class="px-3 text-muted">or</span>
                        <hr class="flex-grow-1">
                    </div>

                    <!-- External Logins -->
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p class="text-center text-muted small">
                            No external logins configured.
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">Learn how to add one</a>.
                        </p>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-3">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary rounded-pill py-2 shadow-sm"
                                            name="provider" value="@provider.Name">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Continue with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }

                    <!-- Footer -->
                    <div class="text-center mt-4">
                        <p class="text-muted mb-0">
                            Already have an account?
                            <a asp-page="./Login" class="fw-semibold text-primary text-decoration-none">Log in</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
